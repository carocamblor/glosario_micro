<!doctype html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/nav') %>
    <h5 class="resultsTitle">Resultados para la b√∫squeda "<%= search %>"</h5>
    <div class="accordion" id="accordionExample">
      <% for (const item of results) { %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= item.id %>" aria-expanded="false" aria-controls="collapseTwo">
            <%= item.title %>
          </button>
        </h2>
        <div id="<%= item.id %>" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <%= item.definition %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <a href="/" class="inicio">Volver al inicio</a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>